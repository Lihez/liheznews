<%- include('../partials/header.ejs', {}) %>
<section class="section mt-5">
    <div class="container">
        <h1>Haberi Düzenle</h1>
        <form action="/specialarea/createnews" method="POST">
            <label for="title">Başlık</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="title">
<br/>       
            <label for="content">İçerik</label>
            <textarea name="content" id="content" class="form-control"></textarea>
            <small class="form-text text-muted">HTML desteklenmektedir!</small>
<br/>     
            <label for="thumbnail">Haberin Resmi</label>
            <input type="text" name="thumbnail" id="thumbnail" class="form-control" placeholder="thumbnail">  
<br/>    
            <label for="category">Kategorisi</label>
            <select id="category" name="category" class="form-control">
                <option disabled>Lütfen Kategori Seç</option>
                <option value="spor">Spor</option>
                <option value="magazin">Magazin</option>
                <option value="dünya">Dünya</option>
                <option value="ekonomi">Ekonomi</option>
                <option value="teknoloji">Teknoloji</option>
                <option value="gündem">Gündem</option>
           </select>
<br/><br/>     
            <input type="submit" value="Haber Yap" class="btn btn-outline-success">            
        </form>
    </div>
    <br/>
    </section>
<%- include('../partials/footer.ejs', {}) %>